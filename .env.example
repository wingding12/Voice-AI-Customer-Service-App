# ===========================================
# Customer Service Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required for full functionality)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/customer_service?schema=public

# ===========================================
# REDIS (Optional - falls back to in-memory)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# AI SERVICES (Required)
# ===========================================
# Google Gemini - Powers text chat AI and copilot
GEMINI_API_KEY=your_gemini_api_key_here

# Retell AI - Powers voice calls
RETELL_API_KEY=your_retell_api_key_here
RETELL_AGENT_ID=your_retell_agent_id_here
RETELL_LLM_ID=your_retell_llm_id_here

# ===========================================
# OPTIONAL SERVICES
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
TELNYX_API_KEY=your_telnyx_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
WEBHOOK_BASE_URL=https://your-backend-url.railway.app

# ===========================================
# FRONTEND CONFIGURATION (for production)
# ===========================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
